@model List<Category>
@if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<h1>Lista de Categorias</h1>
<div class="container">
    <div class="col-6">
        <h2 class="text-primary">
            
                Lista de carreras
            
        </h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-database-fill-add"></i> Crear nueva carrera
         </a>

    </div>

<table class="table table-bordered">
    <tr>

        <th>
            Nombre de carreras
        </th>
        <th>
            semestre
        </th>

        <td>
            opciones
        </td>
    </tr>
    <tbody>
       @foreach(var obj in Model.OrderBy(u=>u.Price))
        {
            <tr>
                <td>@obj.Name
                </td>
                <td>@obj.Price
                </td>
                <td>
                    <div class="w-100 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil"></i> editar
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash"></i> eliminar
                            </a>
                    </div>
                </td>
            </tr>
        }


    </tbody>
</table>

</div>